{
  "name": "@magda/web-server",
  "description": "The server that serves the MAGDA web front end.",
  "version": "0.0.30-0",
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run compile",
    "compile": "tsc -p tsconfig-build.json",
    "watch": "tsc -p tsconfig-build.json --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "test": "mocha --compilers ts:@magda/scripts/node_modules/ts-node/register --require @magda/scripts/node_modules/tsconfig-paths/register \"src/test/**/*.spec.ts\""
  },
  "devDependencies": {
    "@magda/scripts": "^0.0.30-0",
    "@types/chai": "^4.0.1",
    "@types/config": "0.0.32",
    "@types/express": "^4.0.39",
    "@types/lodash": "^4.14.68",
    "@types/mocha": "^2.2.41",
    "@types/nock": "^8.2.1",
    "@types/sinon": "^2.3.3",
    "@types/supertest": "^2.0.2",
    "@types/urijs": "^1.15.34",
    "@types/xml2js": "^0.4.0",
    "@types/yargs": "^6.6.0",
    "chai": "^4.1.0",
    "mocha": "^3.4.2",
    "nock": "^9.0.14",
    "sinon": "^2.4.1",
    "supertest": "^3.0.0",
    "typed-promisify": "^0.4.0",
    "typescript": "~2.5.0",
    "xml2js": "^0.4.19"
  },
  "dependencies": {
    "@magda/typescript-common": "^0.0.30-0",
    "@magda/web-client": "^0.0.30-0",
    "express": "^4.15.3",
    "sitemap": "^1.13.0",
    "urijs": "^1.18.12",
    "yargs": "^8.0.2"
  },
  "config": {
    "docker": {
      "name": "data61/magda-web-server",
      "include": "node_modules dist Dockerfile"
    }
  }
}
