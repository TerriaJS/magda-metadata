{
  "apiVersion": "batch/v1beta1",
  "kind": "CronJob",
  "metadata": {
    "name": "connector-australian-oceans-data-network"
  },
  "spec": {
    "schedule": "30 1 */3 * *",
    "jobTemplate": {
      "spec": {
        "template": {
          "metadata": {
            "name": "connector-australian-oceans-data-network"
          },
          "spec": {
            "containers": [
              {
                "name": "connector-australian-oceans-data-network",
                "image": "data61/magda-csw-connector:0.0.30-0",
                "command": [
                  "node",
                  "/usr/src/app/component/dist/index.js",
                  "--config",
                  "/etc/config/connector.json",
                  "--registryUrl",
                  "http://registry-api/v0"
                ],
                "imagePullPolicy": "IfNotPresent",
                "resources": {
                  "requests": {
                    "cpu": "500m",
                    "memory": "500Mi"
                  },
                  "limits": {
                    "cpu": "1000m",
                    "memory": "1000Mi"
                  }
                },
                "volumeMounts": [
                  {
                    "mountPath": "/etc/config",
                    "name": "config"
                  }
                ],
                "env": [
                  {
                    "name": "USER_ID",
                    "value": "00000000-0000-4000-8000-000000000000"
                  },
                  {
                    "name": "JWT_SECRET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "auth-secrets",
                        "key": "jwt-secret"
                      }
                    }
                  }
                ]
              }
            ],
            "restartPolicy": "OnFailure",
            "volumes": [
              {
                "name": "config",
                "configMap": {
                  "name": "connector-config",
                  "items": [
                    {
                      "key": "australian-oceans-data-network.json",
                      "path": "connector.json"
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  }
}